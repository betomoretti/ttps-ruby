<%- model_class = SignatureYear -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @signature_years.each do |signature_year| %>
      <tr>
        <td><%= link_to signature_year.id, signature_year_path(signature_year) %></td>
        <td><%= signature_year.year %></td>
        <td><%=l signature_year.created_at %></td>
        <td>
          <%= link_to t('.results', :default => t("helpers.links.results")),
                      results_signature_year_path(signature_year), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.students', :default => t("helpers.links.students")),
                      students_signature_year_path(signature_year), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.tests', :default => t("helpers.links.tests")),
                      tests_signature_year_path(signature_year), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_signature_year_path(signature_year), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      signature_year_path(signature_year),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_signature_year_path,
            :class => 'btn btn-primary btn-custom' %>
