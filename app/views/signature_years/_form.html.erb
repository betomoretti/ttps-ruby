<%= form_for @signature_year, :html => { :class => "form-horizontal signature_year" } do |f| %>

  <% if @signature_year.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t("errors.template.header.signature_year.#{@signature_year.errors.count > 1 ? 'other' : 'one' }", count: @signature_year.errors.count ) %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @signature_year.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :year, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :year, :class => 'form-control' %>
    </div>
    <%=f.error_span(:year) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                signature_years_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
