<%- model_class = TestNote -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(count: 2).titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:note) %></th>
      <th><%= model_class.human_attribute_name(:test) %></th>
      <th><%= model_class.human_attribute_name(:student) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @test_notes.each do |test_note| %>
      <tr>
        <td><%= link_to test_note.id, test_note_path(test_note) %></td>
        <td><%= test_note.note %></td>
        <td><%= test_note.test.title %></td>
        <td><%= test_note.student.dni %></td>
        <td><%=l test_note.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      test_note_path(test_note), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_test_note_path(test_note), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      test_note_path(test_note),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_test_note_path,
            :class => 'btn btn-primary btn-custom' %>
