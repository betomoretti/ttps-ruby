<%= form_for @test_note, :html => { :class => "form-horizontal test_note" } do |f| %>

  <% if @test_note.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t("errors.template.header.test_note.#{@test_note.errors.count > 1 ? 'other' : 'one' }", {count: @test_note.errors.count, model: @test_note.model_name.human.downcase} ) %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @test_note.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :note, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :note, :class => 'form-control' %>
    </div>
    <%=f.error_span(:note) %>
  </div>

  <div class="form-group">
    <%= f.label :test, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :test_id, Test.all, :id, :title, {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:test_id) %>
  </div>

  <div class="form-group">
    <%= f.label :student, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :student_id, Student.all, :id, :dni, {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:student_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary btn-custom' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                test_notes_path, :class => 'btn btn-default btn-custom' %>
    </div>
  </div>

<% end %>
