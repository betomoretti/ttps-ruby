<%= form_for @test, :html => { :class => "form-horizontal test" } do |f| %>

  <% if @test.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@test.errors.count, "error") %> prohibited this test from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @test.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :due_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :due_date, :class => 'form-control', :data => { :provide => 'datepicker' } %>
    </div>
    <%=f.error_span(:due_date) %>
  </div>
  <div class="form-group">
    <%= f.label :signature_year, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :signature_year_id, SignatureYear.all, :id, :year, :class => 'form-control' %>
    </div>
    <%=f.error_span(:signature_year_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tests_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
