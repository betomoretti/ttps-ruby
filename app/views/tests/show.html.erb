<%- model_class = Test -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @test.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:due_date) %>:</strong></dt>
  <dd><%= @test.due_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note_to_approve) %>:</strong></dt>
  <dd><%= @test.note_to_approve %></dd>
  <dt><strong><%= model_class.human_attribute_name(:signature_year) %>:</strong></dt>
  <dd><%= @test.signature_year.year%></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              tests_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_test_path(@test), :class => 'btn btn-default' %>
<%= link_to t('.load_massive', :default => t("helpers.links.load_massive")),
              tests_test_note_new_path(@test), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              test_path(@test),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
